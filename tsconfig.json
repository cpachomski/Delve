{
  "compilerOptions": {
    "allowUnreachableCode": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "sourceMap": true,
    "strict": true,
    "pretty": true,
    "rootDir": "src",
    "outDir": "build",
    "declaration": true,
    "moduleResolution": "node",
    "lib": ["es6", "dom", "es2017"]
  },
  "exclude": ["build", "dist", "node_modules"]
}
